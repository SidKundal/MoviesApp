<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:background="@color/background_gray_light">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/white"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="2dp"
        android:layout_marginBottom="2dp">

        <ImageView
            android:id="@+id/moviewPosterView"
            android:layout_width="100dp"
            android:layout_height="@dimen/movie_item_poster_height"
            android:src="@mipmap/ic_launcher"
            android:scaleType="centerCrop"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/movie_item_poster_height"
            android:padding="10dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/movieTitleView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxLines="2"
                android:textColor="@color/black"
                android:textSize="@dimen/movie_item_title_view_text_size"
                android:fontFamily="sans-serif-light"
                android:textStyle="bold"
                android:layout_marginLeft="@dimen/movie_item_title_view_margin_left"
                android:layout_marginRight="@dimen/movie_item_title_view_margin_right"
                android:layout_marginTop="@dimen/movie_item_title_view_margin_top"
                android:layout_marginBottom="@dimen/movie_item_title_view_margin_bottom"/>

            <TextView
                android:id="@+id/movieYearView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxLines="2"
                android:textColor="@color/dark_gray"
                android:fontFamily="sans-serif-light"
                android:textSize="@dimen/movie_item_year_view_text_size"
                android:layout_marginLeft="@dimen/movie_item_year_view_margin_left"
                android:layout_marginRight="@dimen/movie_item_year_view_margin_right"
                android:layout_marginTop="@dimen/movie_item_year_view_margin_top"
                android:layout_marginBottom="@dimen/movie_item_year_view_margin_bottom"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>